<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Other Level</title> 

    <!-- LINK's -->
    <link rel="stylesheet" href="../css/home/style.css">
    <link rel="stylesheet" href="../css/global/navbar.css">
    <link rel="stylesheet" href="../css/filtrar/post.css">
    
    <%- include('../partials/header'); %>

</head>
<body>
  <%- include('../partials/navbar'); %>
  <main>
    <h1><%= tag %></h1>
      <div class="postagens">
          <div class="card-list">
            <% posts.forEach(function(posts) { %>
                <div class="cardi">
                  <a href="../postagem/<%= posts._id %>">
                    <figure class="card-image" style="background-image: url('../../<%= posts.capa %>');" >
                    </figure>
                  </a> <!-- Adicione o fechamento da tag <a> aqui -->
                  <div class="card-h">
                    <%= posts.info.titulo %>
                    <a href="/usuario/<%= posts.autor.nome %>">
                      <div class="post-autor-info">
                        <%= posts.autor.nome %>
                        <img class="foto-user-post" src="<%= posts.autor.foto %>" alt="">
                      </div>
                    </a>
                  </div>
                </div>
              <% }) %>              
        </div>
    </div>
  </main>
    <script src="../js/home/navbar.js"></script>
</body>
</html>
