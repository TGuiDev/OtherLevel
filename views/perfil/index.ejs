<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Other Level</title> 

    <!-- LINK's -->
    <link rel="stylesheet" href="../css/global/navbar.css">
    <link rel="stylesheet" href="../css/perfil/style.css">
    <%- include('../partials/header'); %>

</head>
<body>
  <%- include('../partials/navbar'); %>
  <div class="perfil">
    <div class="flex">
      <div class="col1">
        <div class="informacoes">
          <div class="info-user">
            <img src="<%= currentUser.Avatar %>" alt="">
            <span class="nome-completo"><%= currentUser.NomeCompleto %></span>
            <span class="nome-user">@<%= currentUser.NomeDeUsuario %></span>
          </div>
          <div class="redes">
            <span class="contatos">Contatos</span>
            <ul>
                <!-- <li><a href="mailto:<%= currentUser.Email %>"><i class="fa-solid fa-envelope"></i> Enviar Email</a></li> -->
                <li><a href="<%= currentUser.Links.Linkedin %>">  <i class="fa-brands fa-linkedin"></i>   </a></li>
                <li><a href="<%= currentUser.Links.Insta %>">   <i class="fa-brands fa-instagram"></i>  </a></li>
                <li><a href="<%= currentUser.Links.Behance %>"> <i class="fa-brands fa-behance"></i>    </a></li>
                <li><a href="<%= currentUser.Links.Dribble %>"> <i class="fa-brands fa-dribbble"></i>   </a></li>
                <li><a href="<%= currentUser.Links.Face %>">    <i class="fa-brands fa-facebook"></i>   </a></li>
                <li><a href="<%= currentUser.Links.Vimeo %>">   <i class="fa-brands fa-vimeo"></i>      </a></li>
                <li><a href="<%= currentUser.Links.GitHub %>">  <i class="fa-brands fa-github"></i>     </a></li>
                <li><a href="mailto:<%= currentUser.Email %>">         <i class="fa-solid fa-envelope"></i>    </a></li>
            </ul>
          </div>
          <div class="outros">
            <div class="info-posts">
              <div class="box">
                <span class="tit">Postagens: </span>
                <span class="qtd-post"><%= currentUser.ProjetosPostados %></span>
              </div>
              <div class="box">
                <span class="tit">Seguindo:</span>
                <span><%= currentUser.Seguindo.length %></span>
              </div>
              <div class="box">
                <span class="tit">Seguidores:</span>
                <span><%= currentUser.Seguidores.length %></span>
              </div>
            </div>
            <div class="sobremim">
              <span class="tit">Sobre mim <i class="fa-solid fa-pen-to-square"></i></span>
              <span class="bio"><%= currentUser.Bio %></span>
            </div>
            <div class="habilidades">
              <span class="tit">Habilidades <i class="fa-solid fa-pen-to-square"></i></span>
              <% if (currentUser.Habilidades >= 1 ) { %>
              <ul>
                <li><%= currentUser.Habilidades %></li>
              </ul>
              <% } else { %>
                <ul>
                  <li class="add-mais">Não possui Habildiade</li>
                </ul>
              <% } %>
            </div>
            <div class="educacao">
              <span class="tit">Educação <i class="fa-solid fa-pen-to-square"></i></span>
              <% if (currentUser.Educacao >= 1 ) { %>
                <ul>
                  <li><%= currentUser.Educaco %></li>
                </ul>
                <% } else { %>
                  <ul>
                    <li class="add-mais">Não possui Educação</li>
                  </ul>
                <% } %>
            </div>
            <div class="certificacao">
              <span class="tit">Certificação <i class="fa-solid fa-pen-to-square"></i></span>
              <% if (currentUser.Certificacao >= 1 ) { %>
                <ul>
                  <li><%= currentUser.Certificacao %></li>
                </ul>
                <% } else { %>
                  <ul>
                    <li class="add-mais">Não possui Certificação</li>
                  </ul>
                <% } %>
            </div>
          </div>
        </div>
      </div>
      <div class="col2">
        <div class="postagens">
          <% if (postagens.length === 0) { %>
            <p>Não possui postagens.</p>
          <% } else { %>
              <% postagens.forEach(postagem => { %>
                <div class="cardi">
                  <a href="/postagem/<%= postagem._id %>">
                    <figure class="card-image" style="background-image: url('./<%= postagem.capa %>');" >
                      <!-- <img src="./<%= postagem.capa %>" alt="Capa de Projeto" /> -->
                    </figure>
                  </a>
                  <div class="card-h">
                    <%= postagem.info.titulo %>
                  </div>
                </div>
              <% }); %>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
<script src="./js/home/navbar.js""></script>
